<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    tools:context=".AisleEditActivity" >
    
    <TextView android:text="@string/name_label" />
    <EditText android:id="@+id/item_detail_name" android:inputType="textCapSentences" android:layout_width="fill_parent"/>
    
    <TextView android:text="@string/sort_label" />
    <EditText
        android:id="@+id/item_detail_sort"
        android:inputType="numberDecimal"
        />
    
    <TextView android:text="@string/description_label" />
    <EditText android:id="@+id/item_detail_description" android:inputType="textCapSentences"  android:layout_width="fill_parent"
        />
</GridLayout>